{
  "$schema": "https://biomejs.dev/schemas/2.4.1/schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single",
      "trailingCommas": "all"
    }
  },
  "files": {
    "includes": [
      "**",
      "!**/dist",
      "!**/node_modules",
      "!**/.wrangler",
      "!**/.expo",
      "!**/.zed",
      "!apps/api/scripts",
      "!apps/api/src/infrastructure/persistence/migrations",
      "!apps/api/drizzle.config.ts",
      "!apps/api/wrangler.jsonc",
      "!apps/api/worker-configuration.d.ts",
      "!apps/mobile/ios",
      "!apps/mobile/assets",
      "!apps/mobile/expo-env.d.ts"
    ]
  }
}
